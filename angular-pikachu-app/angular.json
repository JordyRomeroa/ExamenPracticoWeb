{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "projects": {
    "angular-pikachu-app": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "builders": {
        "build": "@angular/build:application",
        "serve": "@angular/build:dev-server"
      },

      "targets": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "index": "src/index.html",
            "polyfills": [],
            "assets": [
              {
                "glob": "**/*",
                "input": "public",
                "output": "/"
              }
            ],
            "styles": ["src/styles.css"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "optimization": true
            }
          }
        },

        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "buildTarget": "angular-pikachu-app:build"
          },
          "configurations": {
            "production": {
              "buildTarget": "angular-pikachu-app:build:production"
            }
          }
        }
      }
    }
  },

  "defaultProject": "angular-pikachu-app"
}
